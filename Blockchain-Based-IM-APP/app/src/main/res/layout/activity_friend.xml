<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.contact.FriendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/friendReturn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#90909090" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headPhoto"
            android:src="@drawable/temp_profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/friendTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="莫小叉"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#90909090" />

    <Button
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="修改备注"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#90909090" />

    <Button
        android:id="@+id/srndMessage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="发消息"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#90909090" />

    <Button
        android:id="@+id/deleteFriend"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/red"
        android:text="删除好友"/>

</LinearLayout>